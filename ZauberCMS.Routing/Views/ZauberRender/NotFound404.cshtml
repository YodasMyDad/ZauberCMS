@{
    Layout = "_ZauberLayout";
}
@section Head {
    <title>Missing View</title>
    <style>
        .full-page {
            font-size: 1.1rem !important;
            background-image: url('_content/ZauberCMS.Components/img/hat.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100%;
            width: 100%;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.5); /* For slight transparency */
        }

        .centered-div {
            background-color: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
            max-width: 600px;
            padding: 25px 25px;
            margin: 0 10px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
}

<div class="full-page">
    <div class="centered-div text-center">
        <h1>Not Found</h1>
        <p>Looks like the page you were looking for does not exist</p>
    </div>
</div>
